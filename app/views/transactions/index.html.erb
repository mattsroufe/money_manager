<h2>Listing transactions</h2>

<%= paginate @transactions %>
<table class="table table-bordered table-condensed table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Details</th>
      <th>Amount</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr data-link="<%= transaction_path(transaction) %>">
        <td><%= transaction.date %></td>
        <td><%= transaction.trans_type =~ /^[Vv]isa\b/ ? transaction.code : transaction.details %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= transaction.category_name if transaction.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'New Transaction', new_transaction_path %>
<br>

    <div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
<script type="text/javascript">


$("tr[data-link]").click(function() {
  window.location = this.dataset.link
})

    $(function () {
        $('#container').highcharts({
            chart: {
                zoomType: 'x',
                spacingRight: 20
            },
            title: {
                text: 'Daily balance: 2011 - Present'
            },
            xAxis: {
                type: 'datetime',
                maxZoom: 14 * 24 * 3600000, // fourteen days
                title: {
                    text: null
                }
            },
            yAxis: {
                title: {
                    text: null
                }
            },
            tooltip: {
                shared: true,
                valuePrefix: '$'
            },
            legend: {
                enabled: false
            },
            plotOptions: {
                area: {
                    fillColor: {
                        linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1},
                        stops: [
                            [0, Highcharts.getOptions().colors[0]],
                            [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                        ]
                    },
                    lineWidth: 1,
                    marker: {
                        enabled: false
                    },
                    shadow: false,
                    states: {
                        hover: {
                            lineWidth: 1
                        }
                    },
                    threshold: null
                }
            },
            series: [{
                type: 'area',
                name: 'Balance',
                data: [
                  <% @data.each do |date, value| %>
                  <%= "[Date.UTC(#{(date - 1.month).to_s.gsub(/\-/,',')}), #{value}]," if date %>
                  <% end %>
                ]
            }]
        });
    });
</script>

<h3>Import transactions</h3>

<%= form_tag import_transactions_path, multipart: true, class: "form-horizontal" do %>
  <%= file_field_tag "file_upload", class: "input", :multiple => true %>
  <%= submit_tag "Import" %>
<% end %>
