<h2>Cashflows</h2>

<%= JSON.pretty_generate(@data.as_json) %>
<%= JSON.pretty_generate(@cash_flow.as_json) %>

<div id="container-line" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
<div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>

<script type="text/javascript">
    $(function () {
        $('#container-line').highcharts({
            chart: {
                zoomType: 'x',
                spacingRight: 20
            },
            title: {
                text: 'Monthly balance: 2011 - Present'
            },
            xAxis: {
                type: 'datetime',
                maxZoom: 14 * 24 * 3600000, // fourteen days
                title: {
                    text: null
                }
            },
            yAxis: {
                title: {
                    text: null
                }
            },
            tooltip: {
                shared: true,
                valuePrefix: '$'
            },
            legend: {
                enabled: false
            },
            plotOptions: {
                area: {
                    fillColor: {
                        linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1},
                        stops: [
                            [0, Highcharts.getOptions().colors[0]],
                            [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                        ]
                    },
                    lineWidth: 1,
                    marker: {
                        enabled: false
                    },
                    shadow: false,
                    states: {
                        hover: {
                            lineWidth: 1
                        }
                    },
                    threshold: null
                }
            },
            series: [{
                type: 'line',
                name: 'Balance',
                data: [
                  <%= "[Date.UTC(#{(@data[0][0] - 2.months).to_s.gsub(/\-/,',')}), 0]," %>
                  <% @data.each do |date, value| %>
                  <%= "[Date.UTC(#{(date - 1.month).to_s.gsub(/\-/,',')}), #{value}]," %>
                  <% end %>
                ]
            }]
        });
    });

