<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MoneyManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    

    <div class="navbar navbar-inverse navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container-fluid">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </div>

    <div class="container">
      <div class="row-fluid">
        <ul class="nav nav-tabs">
          <li <%= is_active?(transactions_path) %> ><%= link_to 'All transactions', transactions_path %></li>
          <li <%= is_active?(categories_path) %> ><%= link_to 'Categories', categories_path %></li>
          <li <%= is_active?(cashflows_index_path) %> ><%= link_to 'Cashflows', cashflows_index_path %></li>
          <li <%= is_active?(budgets_show_path) %> ><%= link_to 'Income statement', budgets_show_path %></li>
        </ul>
      </div><!--/row-->
      <div class="row-fluid">
        <%= render 'layouts/messages' %>
        <%= yield %>

      </div><!--/span-->
      
      <hr>

      <footer>
        <p>&copy; Company <%= Time.now.year %></p>
      </footer>

    </div><!--/row-->

    </div><!--/.fluid-container-->
  </body>
</html>
