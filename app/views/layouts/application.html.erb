<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Money Manager" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Money Manager" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    

    <div class="navbar navbar-inverse navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container-fluid">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Transactions</li>
                <li <%= is_active?(transactions_path) %> ><%= link_to 'All transactions', transactions_path %></li>
              <li class="nav-header">Categories</li>
                <li <%= is_active?(categories_path) %> ><%= link_to 'Categories', categories_path %></li>
              <li class="nav-header">Cashflows</li>
                <li <%= is_active?(cashflows_index_path) %> ><%= link_to 'Cashflows', cashflows_index_path %></li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
          <%= render 'layouts/messages' %>
          <%= yield %>

      </div><!--/span-->
    </div><!--/row-->

      <hr>

      <footer>
        <p>&copy; Company 2013</p>
      </footer>

    </div><!--/.fluid-container-->
  </body>
</html>
